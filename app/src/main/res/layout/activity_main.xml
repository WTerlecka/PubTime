<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFACD"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcomeMessage"
        android:textSize="18sp"
        android:textColor="#000000" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="40"
        android:progress="0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <CheckBox
            android:id="@+id/checkBoxPilka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pilka" />

        <CheckBox
            android:id="@+id/checkBoxTenis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tenis"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />

        <CheckBox
            android:id="@+id/checkBoxZuzel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zuzel" />

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/szukaj" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#00008B"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:divider="#00008B" />

</LinearLayout>